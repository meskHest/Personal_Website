@model PersonalSite.ViewModels.ProjectViewModel

@{
    ViewBag.Title = "EditProject";
    Layout = "~/Views/Shared/MenuLess.cshtml";
}


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Edit project</legend>
        <div class="row-fluid">
            <div class="span2"></div>
            <div class="span4">

                <div class="editor-label">
                    @Html.LabelFor(model => model.Name)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Client)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Client)
                    @Html.ValidationMessageFor(model => model.Client)
                </div>

            </div>
            <div class="span4">

                <div class="editor-label">
                    @Html.LabelFor(model => model.Description)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.Description, new { @style = "height:200px;width:350px;" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
                
                                <div class="editor-label">
                    @Html.LabelFor(model => model.Ingress)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.Ingress, new { @style = "height:100px;width:350px;" })
                    @Html.ValidationMessageFor(model => model.Ingress)
                </div>

            </div>


        </div>

        <div class="row-fluid">
            <div class="span3"></div>
            <p>
                <input type="submit" class="btn btn-success" value="Update" /> @Html.ActionLink("Cancel", "Index")
            </p>

        </div>




    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
