@model PersonalSite.Entities.Project

@{
    ViewBag.Title = "title";
    Layout = "../Shared/_Layout.cshtml";
}


@section Menu{

    <ul class="nav nav-list bs-docs-sidenav affix">
        <li class="active"><a href="#" data-id="card">Info<i class="icon-chevron-right"></i></a></li>
        <li><a href="#" data-id="projects">Gallery<i class="icon-chevron-right"></i></a></li>
        <li><a href="#" data-id="about">Specifics<i class="icon-chevron-right"></i></a></li>
        <li><a data-id="Back" href="#"><i class="icon-chevron-left"></i>Back to start</a></li>

    </ul>




}

<div class="row-fluid">
    <div class="span7">
        <h2>@Model.Name</h2>
    </div>
    <div class="span4" style="padding-top:10px;">
        <div class="row-fluid">Published: @Model.Created</div>
        <div class="row-fluid">Client : @Model.Client</div>
    </div>
</div>
<div class="row-fluid">
    @Html.Raw(Model.Ingress)
</div>

<div class="row-fluid" style="margin-top: 10px;">
    <div class="span8">
        <img class="img-polaroid" src="../../Upload/@Model.CoverImg" />
    </div>
    <div class="span4"></div>
</div>

<div class="row-fluid" style="margin-top: 40px;">
    <div class="span11">
        @Html.Raw(Model.Description)
    </div>
    <div class="span1"></div>
</div>


